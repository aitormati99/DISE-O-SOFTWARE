<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="help" name="Investigadores">    



	<property name="server.port" value="1099"/>
	<property name="server.IP" value="127.0.0.1"/>
	<property name="server.Name" value="Investigadores"/>
	<property name="policy.file" location="security/java.policy"/>

	<!-- Inherited from maven -->
	<echo message="compile classpath: ${compile_classpath}"/>
        <echo message="runtime classpath: ${runtime_classpath}"/>
        <echo message="test classpath:    ${test_classpath}"/>
        <echo message="plugin classpath:  ${plugin_classpath}"/>


	<target name="client" description="Runs the Client">
		<java classname="main.java.cliente.main.Main" classpath="${runtime_classpath}" fork="true">
		  <jvmarg value="-Djava.security.policy=${policy.file}"/>
			<arg value="${server.IP}"/>
	 	  <arg value="${server.port}"/> 
		  <arg value="${server.Name}"/> 
		</java>
	</target>
</project>
